<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Weather_XML" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="CardView." parent="CardView">
        <item name="android:foreground">@drawable/drawable_gradient_background</item>
    </style>

    <!--textstyles-->
    <style name="titleLarge">
        <item name="android:textSize">@dimen/_50ssp</item>
        <item name="fontFamily">@font/poppins_black</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="titleMedium">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@color/white</item>

        <!--        <item name="fontFamily">@font/poppins_black</item>-->
    </style>

    <style name="titleSmall">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/white</item>

        <!--        <item name="fontFamily">@font/poppins_black</item>-->
    </style>

    <style name="bodyLarge">
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="android:textColor">@color/white</item>

        <!--        <item name="fontFamily">@font/poppins_black</item>-->
    </style>

    <style name="bodySmall">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>

        <!--        <item name="fontFamily">@font/poppins_black</item>-->
    </style>

</resources>